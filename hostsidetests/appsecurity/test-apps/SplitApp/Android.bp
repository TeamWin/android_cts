}

// Define a variant with a different signature
android_test_helper_app {
    name: "CtsSplitAppDiffCert",
    defaults: ["CtsSplitAppDefaults"],
    package_splits: ["v7"],
    certificate: ":cts-testkey2",
    aaptflags: [
        "--version-code 100",
        "--version-name OneHundred",
