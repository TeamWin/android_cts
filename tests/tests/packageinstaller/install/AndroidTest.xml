<configuration description="Config for GTS Packageinstaller Session test cases">
    <option name="test-suite-tag" value="gts" />
    <option name="config-descriptor:metadata" key="component" value="package-installer" />

    <target_preparer class="com.android.tradefed.targetprep.RunCommandTargetPreparer">
        <option name="run-command" value="mkdir -p /data/local/tmp/gts/packageinstaller" />
        <option name="teardown-command" value="rm -rf /data/local/tmp/gts"/>
    </target_preparer>

    <target_preparer class="com.android.tradefed.targetprep.RunCommandTargetPreparer">
        <option name="run-command" value="pm uninstall com.google.android.packageinstaller.emptytestapp.gts" />
        <option name="teardown-command" value="pm uninstall com.google.android.packageinstaller.emptytestapp.gts" />
    </target_preparer>

    <target_preparer class="com.android.compatibility.common.tradefed.targetprep.FilePusher">
        <option name="cleanup" value="true" />
        <option name="push" value="GtsEmptyTestApp.apk->/data/local/tmp/gts/packageinstaller/GtsEmptyTestApp.apk" />
    </target_preparer>

    <target_preparer class="com.android.tradefed.targetprep.suite.SuiteApkInstaller">
        <option name="cleanup-apks" value="true" />
        <option name="test-file-name" value="GtsPackageInstallTestCases.apk" />
    </target_preparer>

    <test class="com.android.tradefed.testtype.AndroidJUnitTest" >
        <option name="package" value="com.google.android.packageinstaller.install.gts" />
        <option name="runtime-hint" value="1m" />
    </test>
</configuration>
